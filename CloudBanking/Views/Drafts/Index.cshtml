@model IEnumerable<CloudBanking.Models.Draft>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<h2>Drafts</h2>

<p>
    <a href="/Drafts/Create" class="btn btn-success btn-cons">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SenderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SenderCNIC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DraftAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DraftDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.AccountCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SenderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderCNIC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DraftAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DraftDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccount.AccountCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Branch.BranchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DraftID }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Details", "Details", new { id = item.DraftID }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DraftID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
